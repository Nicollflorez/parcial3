extends layout/main

block content
  // HERO con fondo desde CSS
  .hero.text-white.text-center.d-flex.align-items-center
    .container
      h1 Bienvenido a Beauty Smile
      h3 Tu sonrisa, nuestra prioridad
      // CAMBIO CLAVE AQUÍ: El atributo href del botón ahora es '/citas/nueva'
      a.btn.btn-light.mt-3.btn-cita(href='/citas/nueva') Solicita tu cita

  // CONTENIDO PRINCIPAL
  .container.mt-5
    .row
      .col-md-6
        h2.text-primary.color-custom-servicios Servicios Odontológicos
        ul.list-group.list-group-flush
          each servicio in ['Limpieza Dental', 'Blanqueamiento Dental', 'Ortodoncia', 'Implantes Dentales', 'Endodoncia']
            li.list-group-item= servicio

      .col-md-6
        h2.text-primary.color-custom-testimoniales Testimonios de Pacientes
        .card.shadow-sm
          .card-body
            blockquote.blockquote.mb-0
              p "Excelente atención y resultados visibles desde la primera cita. ¡Volveré sin dudarlo!"
              footer.blockquote-footer.mt-2
                small.text-muted – María Pérez

